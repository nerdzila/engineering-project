<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Mis coches</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>
    <style>
        #mapid { height: 480px; }
    </style>
</head>
<body>
    <div id="mapid"></div>

    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
    integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
    crossorigin=""></script>
    <script>
        var cars = [
            {% for car in cars %}
            {
                'license_plate': '{{car.license_plate}}',
                'latlong': [{{car.latitude}}, {{car.longitude}}]
            },
            {% endfor %}
        ];
        var carPoly = cars.map(car => car.latlong);
        var mymap = L.map('mapid').setView([19.26, -99.8], 10);

        L.tileLayer(
            'https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}',
            {
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox.streets',
                accessToken: 'pk.eyJ1IjoibmVyZHppbGEiLCJhIjoiY2p6OWR6bmdvMWduajNsbmxqNnEwZ2gyayJ9.EKFEiAI1l7rFIp9TmNQjcg'
            }
        )
        .addTo(mymap);

        if (carPoly.length) {
            mymap.fitBounds(L.polygon(carPoly).getBounds());
        }

        for (const car of cars) {
            L.marker(car.latlong)
            .bindTooltip(
                car.license_plate,
                {
                    permanent: true,
                    direction: 'right'
                }
            )
            .addTo(mymap);
        }
    </script>
</body>
</html>